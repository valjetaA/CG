                        <PathFigure StartPoint="60,0">
                            <LineSegment Point="70,-10"/>
                            <LineSegment Point="80,0"/>
                            <LineSegment Point="80,113"/>
                            <LineSegment Point="60, 113"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
